<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="windowSplashScreenBackground">@color/purple_500</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/app_logo</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.JetPackNews</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>


    <!-- Base application theme. -->
    <style name="Theme.JetPackNews" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_500</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>